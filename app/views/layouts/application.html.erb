<!DOCTYPE html>
<html>
<head>
  <title>Laila El Halfi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="container col-lg-6 col-lg-offset-2">
<!-- header admin -->
<% if params[:controller] == "admin" %>
		<p>
	<% if user_signed_in? %>
	  Bonjour <strong><%= current_user.username %></strong>.
	  <%= link_to 'Editer Associe', user_associe_path, :class => 'navbar-link' %> |
	  <%= link_to 'Editer veille', user_veille_path, :class => 'navbar-link' %> |
	  <%= link_to 'Editer vos pages', user_path, :class => 'navbar-link' %> |
	  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
	  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
	<% else %>
	  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
	<% end %>
	</p>

	<% if notice %>
	  <p class="alert alert-success"><%= notice %></p>
	<% end %>
	<% if alert %>
	  <p class="alert alert-danger"><%= alert %></p>
	<% end %>
<!-- header visiteurs -->
<% elsif params[:controller] == "home"%>
	<header>
	  	<div>
			<div class="title">Laila El Halfi</div>
			<div class="subtitle">Avocat a la cour</div>
		</div>
	</header>
	
	<nav class="navtop">
		<span class="submenu"><%= link_to 'Acceuil', root_path, :class => 'navbar-link' %> </span>
		<span class="submenu"><%= link_to 'Veille', veille_path, :class => 'navbar-link' %> </span>
		<span class="submenu"><%= link_to 'Specialité', specialite_path, :class => 'navbar-link' %> </span>
		<span class="submenu"><%= link_to 'Associé', associe_path, :class => 'navbar-link' %> </span>
		<span class="submenu"><%= link_to 'Honoraire', honoraire_path, :class => 'navbar-link' %> </span>
		<span class="submenu"><%= link_to 'Contact', contact_path, :class => 'navbar-link' %> </span>
	</nav>
	
	<div class="separator col-xs-offest-6"></div>


<% end %>


<div class="container">


<div class="col-sm-12">
	<aside class="col-sm-2 profil">
		<img src="<%= asset_path( 'carlton.gif' ) %>" class="img-responsive img-rounded" alt="Laila El Halfi" />
	</aside>
		<div class="col-sm-10">
			<%= yield %>
		</div>
	</div>
</div>

</body>
</html>

