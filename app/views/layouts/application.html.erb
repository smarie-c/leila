	<script type="text/javascript">
		function ft_add_active_to_header(str)
		{
			document.getElementById(str).className += " act";
			document.getElementById(str).childNodes[0].style.color = "black"
		}
		function ft_active_languages(str)
		{
			if (str == "en")
				document.getElementById("en").className += " act_lang";
			else
				document.getElementById("fr").className += " act_lang";
		}
		ft_add_active_to_header("<%= params[:action] %>");
		ft_active_languages("<%= locale %>");
	</script>


