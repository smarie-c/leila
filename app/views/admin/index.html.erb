			<%= f.text_field :texte9en, :value =>  @index.texte9en,required: true %>
			<%= f.text_field :texte10en, :value =>  @index.texte10en,required: true %>
			<%= f.text_field :texte11en, :value =>  @index.texte11en,required: true %>
		<% end %>
		<%= f.submit "update", class: "btn btn-success" %>
	<% end %>
</div>
