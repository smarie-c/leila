<input class="btn btn-primary" name="commit" id="update_index" type="submit" value="modifier page index" onclick="display_update('index')">
<input class="btn btn-primary" name="commit" id="update_specialite" type="submit" value="modifier page specialite" onclick="display_update('specialite')">
<input class="btn btn-primary" name="commit" id="update_honoraire" type="submit" value="modifier page honoraire" onclick="display_update('honoraire')">
<input class="btn btn-primary" name="commit" id="update_contact" type="submit" value="modifier page contact" onclick="display_update('contact')">

<div id="contact" class="admin_class" style="display:none">
	#contact

	<%= bootstrap_form_tag url: user_contact_update_path, method: "put" do |f| %>
		<% if locale == :fr %>
			<%= f.text_field :texte1, :value =>  @contact.texte1, required: true %>
		<% elsif locale == :en %>
			#en anglais
			<%= f.text_field :texte1en, :value =>  @contact.texte1en, required: true %>
		<% end %>
		<%= f.submit "update", class: "btn btn-success" %>
	<% end %>
</div>


