#contact

<%= bootstrap_form_tag url: user_contact_update_path, method: "put" do |f| %>
<% if locale == :fr %>
					<%= f.text_field :texte1, :value =>  @contact.texte1, required: true %>
<% elsif locale == :en %>
#en anglais
					<%= f.text_field :texte1en, :value =>  @contact.texte1en, required: true %>
<% end %>
					<%= f.submit "update", class: "btn btn-success" %>
<% end %>


