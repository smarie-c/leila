	<div class="col-sm-offset-2"> 
	<%= will_paginate @veilles %>
<% if @veilles.count == 0 %>
<%= t('category.actualites.no_actu') %>
<% end %>
	<% @veilles.each do |v| %>
	<section class="bloc-g veille">
		<article>
			<strong>
				<% if v.veille_type == 0 %>
					<div class="atitle actu_idee">
				<% elsif v.veille_type == 1 %>
					<div class="atitle actu_info">
				<% else %>
					<div class="atitle actu_news">
				<% end %>
					<%= v.titre.bbcode_to_html_with_formatting.html_safe %><br/>
				</div>
			</strong>
			<div class="separator-article"></div>
			<div class="veille">
				<%= v.texte.bbcode_to_html_with_formatting.html_safe %><br/>
			</div>
		</article>
	</section>
	<% end %>
	<%= will_paginate @veilles %>
</div>

