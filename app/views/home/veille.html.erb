<div class="col-sm-8">
	<%= will_paginate @veilles %>
	<% @veilles.each do |v| %>
	<section>
		<article>
			<div class="vtitle"><%= v.titre %><br/></div>
			<div class="veille"><%= v.texte.bbcode_to_html_with_formatting.html_safe %><br/></div>
			<div class="separator-article"></div>
		</article>
	</section>
	<% end %>
	<%= will_paginate @veilles %>
</div>
